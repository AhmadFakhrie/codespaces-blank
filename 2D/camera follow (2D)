using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class CameraFollow : MonoBehaviour
{

    public Transform followTransform; //tipe data transform supaya kita bisa tau posisi object yang akan kita masukan kesini


    // Update is called once per frame
    void Update()
    {
        this.transform.position = new Vector3(followTransform.position.x, followTransform.position.y, this.transform.position.z);/// supaya object dengan codingan ini mengikuti apa yang kita masukan ke variable  followtransform


    }
}