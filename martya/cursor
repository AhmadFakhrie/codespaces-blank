using UnityEngine;
using System.Collections;

public class cursor : MonoBehaviour
{
    // Use this for initialization
    void Update()
    {
        if (Input.GetKeyDown(KeyCode.P))
        {//Set Cursor to not be visible
            Cursor.visible = false;
        }
        if (Input.GetKeyDown(KeyCode.O))
        {//Set Cursor to not be visible
            Cursor.visible = true;
        }



    }
}